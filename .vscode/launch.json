    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch buttplug-mcp SSE server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/buttplug-mcp/main.go",
            "env": {
            },
            "args": [
                "--sse", "--sse-host", "localhost:12346",
                "--ws-port", "12345",
            ]
        },
        {
            "name": "Attach buttplug-mcp SSE server",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0,
